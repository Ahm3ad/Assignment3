<%- include Partials/header.ejs %>
<%- include Partials/nav.ejs %>
<div class="container mt-4">
    <h1>Task List</h1>
    <a href="/Tasks/add" class="btn btn-primary" role="button">Add Task</a>
    
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>Description</th>
          <th>Due By</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %> <!-- Loop through tasks array -->
          <tr>
            <td><%= task.description %></td> <!-- Access description -->
            <td><%= task.due_by %></td> <!-- Access due_by -->
            <td><%= task.price %></td> <!-- Access price -->
            <td>
              <!-- Edit button -->
              <a href="/Tasks/edit/<%= task._id %>" class="btn btn-primary">Edit</a>
              
              <!-- Delete button -->
              <a href="/Tasks/delete/<%= task._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
</div>
<%- include('Partials/footer.ejs') %>
