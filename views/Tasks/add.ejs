<%- include('../Partials/header.ejs') %>
<%- include('../Partials/nav.ejs') %>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input
                        type="text"
                        class="form-control"
                        id="descriptionTextField"
                        placeholder="Enter the description"
                        name="description"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Task name"
                        name="name_task"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="dueDateField">Due Date</label>
                    <input
                        type="date"
                        class="form-control"
                        id="dueDateField"
                        name="due_by"
                        required
                    />
                </div>
                <button class="btn btn-primary" type="submit">
                    Submit <i class="fas fa-edit"></i>
                </button>
                <a class="btn btn-warning" href="/tasks">
                    Cancel <i class="fas fa-undo"></i>
                </a>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer.ejs') %>
